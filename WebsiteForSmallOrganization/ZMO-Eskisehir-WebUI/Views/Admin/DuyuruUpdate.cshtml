@model ZMO_Eskisehir_WebUI.Models.GroupOfModels;

<form asp-controller="Admin" asp-action="Index">
    <div class="form-group">
        <input type="text" asp-for="password" value="@Model.password" class="form-control" readonly hidden autocomplete="off" />
    </div>
    <div class="form-group">
        <input type="submit" value="panel ana sayfasına dön" class="btn btn-secondary" />
    </div>
</form>
<hr />
<h3>Duyuru Bilgilerini Düzenle</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="DuyuruUpdatePost" method="post">
            <div class="form-group">
                <label>Duyuru Başlığı</label>
                <input asp-for="duyuruModel.Baslik" class="form-control" value="@Model.duyuruModel.Baslik" required autocomplete="off" />
            </div>
            <div class="form-group">
                <label>Yeni Tarih Girin (eski tarih: @Model.duyuruModel.Tarih)</label>
                <input asp-for="duyuruModel.Tarih" class="form-control" value="@DateTime.UtcNow.AddHours(3)" required autocomplete="off" />
            </div>
            <div class="form-group">
                <label>Duyuru ile ilgili bir link girin. Link koymak istemiyor iseniz nokta koyun</label>
                <input asp-for="duyuruModel.Link" class="form-control" type="text" value="@Model.duyuruModel.Link" required autocomplete="off" />
            </div>
            <div class="form-group">
                <label for="metintextarea">Duyuru metin girin</label>
                <textarea class="form-control" asp-for="duyuruModel.Metin" id="metintextarea" rows="5" required autocomplete="off">@Model.duyuruModel.Metin</textarea>
            </div>
            <div class="form-group">
                <input type="text" asp-for="password" class="form-control" readonly hidden autocomplete="off" />
            </div>
            <div class="form-group">
                <input type="text" asp-for="duyuruModel.Id" value="@Model.duyuruModel.Id" class="form-control" readonly hidden autocomplete="off" />
            </div>
            <div class="form-group">
                <input type="submit" value="Duyuruyu Yukarıdaki Bilgiler İle Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>