@model ZMO_Eskisehir_WebUI.Models.GroupOfModels;

<form asp-controller="Admin" asp-action="Index">
    <div class="form-group">
        <input type="text" asp-for="password" value="@Model.password" class="form-control" readonly hidden autocomplete="off" />
    </div>
    <div class="form-group">
        <input type="submit" value="panel ana sayfasına dön" class="btn btn-secondary" />
    </div>
</form>
<hr />
<h3>Basun Bülteni Bilgilerini Düzenle (bülten ile ilgili dosyayı değiştirmek için bülten silinip bilgiler tekrar eklenmelidir)</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="BasinBulteniUpdatePost" method="post">
            <div class="form-group">
                <label>Büşten Başlığı</label>
                <input asp-for="basinBultenlerimizModel.Baslik" class="form-control" value="@Model.basinBultenlerimizModel.Baslik" required autocomplete="off" />
            </div>
            <div class="form-group">
                <label>Yeni Tarih Girin (eski tarih: @Model.basinBultenlerimizModel.Tarih)</label>
                <input asp-for="basinBultenlerimizModel.Tarih" class="form-control" value="@DateTime.UtcNow.AddHours(3)" required autocomplete="off" />
            </div>
            <div class="form-group">
                <label>ilgili bir link girin. Link koymak istemiyor iseniz nokta koyun</label>
                <input asp-for="basinBultenlerimizModel.Link" class="form-control" type="text" value="@Model.basinBultenlerimizModel.Link" required autocomplete="off" />
            </div>
            <div class="form-group">
                <input type="text" asp-for="password" class="form-control" readonly hidden autocomplete="off" />
            </div>
            <div class="form-group">
                <input type="text" asp-for="basinBultenlerimizModel.Id" value="@Model.basinBultenlerimizModel.Id" class="form-control" readonly hidden autocomplete="off" />
            </div>
            <div class="form-group">
                <input type="submit" value="Bülteni Yukarıdaki Bilgiler İle Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>