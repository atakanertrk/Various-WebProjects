@model ZMO_Eskisehir_WebUI.Models.EgitimlerModel;

    <button type="button" class="btn btn-success"><a asp-controller="Home" asp-action="Index" style="color:whitesmoke; font-weight:bold; text-decoration:none">Ana Sayfa</a></button>
    <hr />

    <h4 style="font-weight:bold; margin-bottom:30px">Tüm Eğitimler</h4>

    <ul style="list-style:none">
        @{
            int counter = 1;
            foreach (var egitim in Model.egitimler)
            {
                if (counter >= 100)
                {
                    break;
                }
                <li style="margin-bottom:15px">
                    <p style="font-weight:bold"> @egitim.Tarih.ToShortDateString()</p>
                    <h4 style="color:darkred" class="text-break"> @egitim.Baslik </h4>
                    @{ string imageName = egitim.Id.ToString() + ".jpg";}
                    <img src="~/Resources/Images/Egitimlerimiz/@imageName" alt="eğitim fotoğrafı yok" style="max-width:50%">
                    <p class="text-break"> @egitim.Metin</p>
                    <p class="text-break"><a href="@egitim.Link">@egitim.Link</a></p>
                    <hr />
                </li>
                counter += 1;
            }
        }

    </ul>