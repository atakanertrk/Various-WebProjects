@model ZMO_Eskisehir_WebUI.Models.GroupOfModels;
@{
    <button type="button" class="btn btn-success"><a asp-controller="Home" asp-action="Index" style="color:whitesmoke; font-weight:bold; text-decoration:none">Ana Sayfa</a></button>
    <hr />

    foreach (var etkinlik in Model.etkinlikModel.etkinlikler)
    {
        <h5 style="font-weight:bold">@etkinlik.Tarih.ToShortDateString()</h5>
        <h4 style="color:darkgreen; font-weight:bold" class="text-break">@etkinlik.Baslik</h4>
        string imageName = etkinlik.Id.ToString() + ".jpg";
        <img src="~/Resources/Images/Etkinlikler/@imageName" alt="etkinlik fotoğrafı yok" style="max-width:50%">
        <p class="text-break">@etkinlik.Metin</p>
        <a href="@etkinlik.Link" class="text-break">@etkinlik.Link</a>
    }
}